{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // ðŸ‘ˆ fix
    "moduleResolution": "NodeNext", // ðŸ‘ˆ fix
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "__tests__"]
}
